{
  "$schema": "http://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "moduleResolution": "node",
    "removeComments": false,
    "jsx": "react",
    "sourceMap": true,
    "target": "es2018",
    "outDir": "build",
    "declaration": true,
    "declarationMap": true,
    "strict": true,
    "module": "ESNext",
    "noEmitOnError": true,
    "lib": ["es2017"],
    "esModuleInterop": false,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false
  },
  "include": ["src/**/*.ts", "src/utils.ts" ],
  "exclude": [
    "node_modules",
    "build",
    "storybook-static"
  ],
  "typedocOptions": {
    "entryPoints": ["src/index.ts"],
    "out": "docs"
  }
}
